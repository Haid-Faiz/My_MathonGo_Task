<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/empty_attempted_question_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_transparent"
    android:gravity="center"
    android:translationZ="@dimen/_100sdp"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible">

    <ImageView
        android:layout_width="@dimen/_136sdp"
        android:layout_height="@dimen/_136sdp"
        android:src="@drawable/ic_streak_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:text="You're on a streak !"
        android:textColor="@color/white"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:text="3 correct answers in a row"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_28sdp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/view_solution_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_12sdp"
            android:backgroundTint="@color/white"
            android:text="View Solution"
            android:textAllCaps="false"
            android:textColor="@color/black_dark" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/next_quest_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:text="Next Question"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>


</LinearLayout>