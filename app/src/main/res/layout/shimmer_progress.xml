<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_background">

    <View
        android:id="@+id/question_no"
        android:layout_width="@dimen/_16sdp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="@dimen/_24sdp"
        android:layout_height="@dimen/_16sdp"
        android:background="@drawable/grey_shimmer_bg" />

    <View
        android:id="@+id/question_text_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_16sdp"
        android:layout_toEndOf="@id/question_no"
        android:layout_marginEnd="@dimen/_36sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:background="@drawable/grey_shimmer_bg" />

    <View
        android:id="@+id/question_text_2"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_12sdp"
        android:layout_below="@id/question_text_1"
        android:layout_alignStart="@id/question_text_1"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@drawable/grey_shimmer_bg" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_below="@id/question_text_2"
        android:layout_marginHorizontal="@dimen/_24sdp"
        android:background="@color/light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</RelativeLayout>
